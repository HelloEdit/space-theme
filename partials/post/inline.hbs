<article class="grid py-8 sm:grid-cols-4 {{post_class}}">
    <div class="mb-4 sm:mb-0">
        <div class="space-y-1 text-xs font-semibold tracking-wide uppercase">
            <a href="{{primary_tag.url}}" aria-label="Category">
                {{primary_tag.name}}
            </a>
            <p class="text-gray-600">
                <time datetime="{{date format="YYYY-MM-DD"}}">
                    {{date format="DD MMMM YYYY"}}
                </time>
            </p>
        </div>
    </div>

    <div class="sm:col-span-3 lg:col-span-2">
        <a href="{{url}}" class="block">
            <div class="mb-3">
                <p class="text-3xl font-extrabold leading-none sm:text-4xl xl:text-4xl">
                    {{title}}
                </p>
            </div>
            <p class="text-gray-700">
                {{excerpt}}
            </p>
        </a>
    </div>
</article>
