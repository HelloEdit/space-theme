<aside class="fixed w-full z-10 opacity-0 md:mt-5 transform transition-all duration-300 ease-out"
       id="banner">
    <div class="bg-indigo-600 md:rounded-lg rounded-b-lg max-w-7xl mx-auto py-3 px-3.5">
        <div class="flex items-center justify-between flex-wrap">
            <div class="w-0 flex-1 flex items-center">
                <span class="flex p-2 rounded-lg bg-indigo-800">
                  {{> icons/megaphone}}
                </span>
                <p class="ml-3 font-medium text-white truncate">
                    <span class="md:hidden">{{small_text}}</span>
                    <span class="hidden md:inline">{{text}}</span>
                </p>
            </div>
            <div class="order-3 mt-3 flex-shrink-0 w-full sm:order-2 sm:mt-0 sm:w-auto">
                <a class="flex items-center justify-center px-4 py-2 border border-transparent rounded-md
                   shadow-sm text-sm font-medium text-indigo-600 bg-white hover:bg-indigo-50"
                   href="{{action_link}}">
                    {{action_text}}
                </a>
            </div>
            <div class="order-2 flex-shrink-0 sm:order-3 sm:ml-3">
                <button class="-mr-1 flex p-2 rounded-md hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-white sm:-mr-2"
                        type="button">
                    <span class="sr-only">Dismiss</span>
                    <svg aria-hidden="true" class="h-6 w-6 text-white" fill="none" stroke="currentColor"
                         stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M6 18L18 6M6 6l12 12" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                </button>
            </div>
        </div>
    </div>
</aside>

<script async>
    const id = "{{id}}_banner_hidden"
    const isHidden = localStorage.getItem(id)
    if (!isHidden) {
        const banner = document.getElementById("banner")
        const button = banner.querySelector("button")

        setTimeout(() => banner.classList.toggle("opacity-0"), 2000)

        button.addEventListener("click", () => {
            banner.classList.toggle("opacity-0")
            localStorage.setItem(id, "yes")
        })
    }
</script>
