{{!< default}}

{{#post}}

    <section class="px-4 sm:px-6 md:px-8">
        <div class="max-w-4xl mx-auto pb-28">
            <header class="py-10 text-center">
                <h1 class="text-2xl font-extrabold tracking-tight text-slate-100 md:text-5xl mt-1">
                    {{title}}
                </h1>

                <p class="pt-2 text-slate-300">{{excerpt}}</p>

                {{#if feature_image}}
                    <figure>
                        <img class="rounded-xl object-cover mt-10 aspect-video"
                             srcset="{{img_url feature_image size="s"}} 300w,
                                {{img_url feature_image size="m"}} 600w,
                                {{img_url feature_image size="l"}} 1000w,
                                {{img_url feature_image size="xl"}} 2000w"
                             sizes="(min-width: 1400px) 1400px, 92vw"
                             src="{{img_url feature_image size="l"}}"
                             alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                        />

                        <figcaption class="text-gray-400 text-sm mt-2">
                            {{feature_image_caption}}
                        </figcaption>
                    </figure>
                {{/if}}
            </header>

            <article class="pt-10 prose lg:prose-xl prose-invert max-w-none">
                {{content}}
            </article>
        </div>
    </section>
{{/post}}

