{{!< default}}

<section class="px-4 sm:px-6 md:px-8 bg-slate-900 text-white">
    {{#author}}
    <header class="flex flex-col items-center max-w-4xl mx-auto pb-28">
        {{#if profile_image}}
            <img class="w-32 h-32 rounded-full object-cover" src="{{profile_image}}" alt="{{name}}" />
        {{/if}}

        <h1 class="mt-5 text-5xl font-bold">{{name}}</h1>

        {{#if location}}
            <div class="flex mt-2">
                <svg class="w-5 fill-white" viewBox="0 0 24 24" aria-hidden="true"><path fill="none" d="M0 0h24v24H0z"></path><path d="M18.364 17.364L12 23.728l-6.364-6.364a9 9 0 1 1 12.728 0zM12 15a4 4 0 1 0 0-8 4 4 0 0 0 0 8zm0-2a2 2 0 1 1 0-4 2 2 0 0 1 0 4z"></path></svg>
                <span class="ml-1">{{location}}</span>
            </div>
        {{/if}}

        {{#if bio}}
        <div class="max-w-2xl">
            <p class="mt-8">{{bio}}</p>
        </div>
        {{/if}}

        {{#if cover_image}}
            <figure class="mt-16">
                <img class="rounded-xl object-cover aspect-video"
                        srcset="{{img_url cover_image size="s"}} 300w,
                            {{img_url cover_image size="m"}} 600w,
                            {{img_url cover_image size="l"}} 1000w,
                            {{img_url cover_image size="xl"}} 2000w"
                        sizes="(min-width: 1400px) 1400px, 92vw"
                        src="{{img_url cover_image size="l"}}"
                        alt="cover image"
                />
            </figure>
        {{/if}}
    </header>
    {{/author}}

    <div class="max-w-7xl mx-auto pb-28">
        <h2 class="text-4xl font-bold">
            {{plural pagination.total empty='Aucun article' singular='% article' plural='% articles'}}
        </h2>
        <div class="mt-8 grid gap-10 lg:grid-cols-3 sm:max-w-sm sm:mx-auto lg:max-w-full">
            {{#foreach posts limit="3"}}
                {{> post/card}}
            {{/foreach}}
        </div>
    </div>
</section>
</section>