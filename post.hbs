{{!< default}}

{{#post}}

    <div id="docs-sidebar" class="-translate-x-full transition-all duration-300 transform hidden fixed top-0 left-0
    bottom-0 z-10 py-10 px-8 overflow-y-auto scrollbar-y lg:block lg:translate-x-0 lg:top-0 lg:right-auto
    lg:bottom-0 lg:left-[max(0px,calc(50%-45rem))] lg:z-10 dark:scrollbar-y h-min">
        <!-- Navigation Toggle -->
        <button type="button" class="ml-auto flex justify-end lg:hidden text-gray-500 hover:text-gray-600"
                data-hs-sidebar="#docs-sidebar" aria-controls="docs-sidebar" aria-label="Toggle navigation">
            <span class="sr-only">Toggle Navigation</span>
            <svg class="w-5 h-5" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                <path
                    d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
            </svg>
        </button>
        <!-- End Navigation Toggle -->

        <!-- Nav -->
        <nav id="sidebar-nav" class="relative space-y-8">
            <h5 class="mb-3 text-sm font-semibold text-slate-900 dark:text-slate-200">Table des mati√®res</h5>
            <ul class="ml-0.5 space-y-2 border-l-2 border-slate-100 dark:border-slate-800"
                data-hs-scrollspy="#scrollspy">
                <li><a
                    class="block py-1 pl-4 -ml-px border-l-2 border-transparent text-sm text-slate-700 hover:border-slate-400 hover:text-slate-900 dark:text-slate-400 dark:hover:text-slate-300 hs-scrollspy-active:font-medium hs-scrollspy-active:text-blue-600 dark:hs-scrollspy-active:text-blue-400 active"
                    href="#first">First</a></li>
                <li><a
                    class="block py-1 pl-4 -ml-px border-l-2 border-transparent text-sm text-slate-700 hover:border-slate-400 hover:text-slate-900 dark:text-slate-400 dark:hover:text-slate-300 hs-scrollspy-active:font-medium hs-scrollspy-active:text-blue-600 dark:hs-scrollspy-active:text-blue-400"
                    href="#second">Second</a></li>
                <li><a
                    class="block py-1 pl-4 -ml-px border-l-2 border-transparent text-sm text-slate-700 hover:border-slate-400 hover:text-slate-900 dark:text-slate-400 dark:hover:text-slate-300 hs-scrollspy-active:font-medium hs-scrollspy-active:text-blue-600 dark:hs-scrollspy-active:text-blue-400"
                    href="#third">Third</a></li>
                <li><a
                    class="block py-1 pl-4 -ml-px border-l-2 border-transparent text-sm text-slate-700 hover:border-slate-400 hover:text-slate-900 dark:text-slate-400 dark:hover:text-slate-300 hs-scrollspy-active:font-medium hs-scrollspy-active:text-blue-600 dark:hs-scrollspy-active:text-blue-400"
                    href="#fourth">Fourth</a></li>
                <li><a
                    class="block py-1 pl-4 -ml-px border-l-2 border-transparent text-sm text-slate-700 hover:border-slate-400 hover:text-slate-900 dark:text-slate-400 dark:hover:text-slate-300 hs-scrollspy-active:font-medium hs-scrollspy-active:text-blue-600 dark:hs-scrollspy-active:text-blue-400"
                    href="#fifth">Fifth</a></li>
                <li><a
                    class="block py-1 pl-4 -ml-px border-l-2 border-transparent text-sm text-slate-700 hover:border-slate-400 hover:text-slate-900 dark:text-slate-400 dark:hover:text-slate-300 hs-scrollspy-active:font-medium hs-scrollspy-active:text-blue-600 dark:hs-scrollspy-active:text-blue-400"
                    href="#sixth">Sixth</a></li>
            </ul>
        </nav>
        <!-- Nav -->
    </div>

    <section class="px-4 sm:px-6 md:px-8">
        <div class="max-w-4xl mx-auto pb-28">
            <header class="py-10">
                <div class="text-sm">
                    <dl>
                        <dt class="sr-only">Date</dt>
                        <dd class="text-slate-700 text-lg dark:text-slate-400 capitalize">
                            <time datetime="{{date format="MM-DD-YYYY"}}">
                                {{date format="dddd DD MMMM YYYY"}}
                            </time>
                        </dd>
                    </dl>
                </div>

                <h1 class="text-2xl font-extrabold tracking-tight text-slate-200 md:text-5xl mt-1">
                    {{title}}
                </h1>

                <div class="mt-6">
                    <ul class="flex flex-wrap items-center text-sm leading-6">
                        {{#foreach authors}}
                            <li class="flex items-center font-medium whitespace-nowrap">
                                <img src="{{profile_image}}" alt=""
                                     class="mr-3 w-11 h-11 rounded-full object-cover bg-slate-50 bg-slate-800">
                                <div class="leading-4">
                                    <a href="{{url}}">
                                    <div class="text-slate-200 text-base">{{name}}</div>
                                    </a>
                                    {{#if twitter}}
                                        <div class="text-sm text-sky-400 hover:text-sky-600">
                                            <a href="https://twitter.com/{{twitter}}"
                                               class="text-sky-500 hover:text-sky-600 dark:text-sky-400">
                                                {{twitter}}
                                            </a>
                                        </div>
                                    {{/if}}
                                </div>
                            </li>
                        {{/foreach}}
                    </ul>
                </div>

                <figure>
                    <img class="rounded-xl object-cover mt-10 aspect-video"
                         srcset="{{img_url feature_image size="s"}} 300w,
                                {{img_url feature_image size="m"}} 600w,
                                {{img_url feature_image size="l"}} 1000w,
                                {{img_url feature_image size="xl"}} 2000w"
                         sizes="(min-width: 1400px) 1400px, 92vw"
                         src="{{img_url feature_image size="l"}}"
                         alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                    />

                    <figcaption class="text-gray-400 text-sm mt-2">
                        {{feature_image_caption}}
                    </figcaption>
                </figure>
            </header>

            <article class="pt-10 prose lg:prose-xl prose-invert max-w-none">
                {{content}}
            </article>
        </div>
    </section>
{{/post}}
